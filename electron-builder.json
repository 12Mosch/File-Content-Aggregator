{
  "appId": "de.mosch.filecontentaggregator",
  "productName": "File Content Aggregator",
  "files": [
    "dist-electron/**/*",
    "dist-react/**/*",
    "node_modules/**/*",
    "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/*.d.ts",
    "!**/node_modules/**/*.map",
    "!**/node_modules/**/*.md",
    "!**/node_modules/**/LICENSE*",
    "!**/node_modules/**/license*"
  ],
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "asar": true,
  "icon": "./desktopIcon.png",
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": ["portable", "msi"]
  }
}
