// D:/Code/Electron/src/electron/tsconfig.json
{
  "compilerOptions": {
    // require strict types (null-save)
    "strict": true,
    // tell TypeScript to generate ESM Syntax
    "target": "ESNext",
    // tell TypeScript to require ESM Syntax as input (including .js file imports)
    "module": "NodeNext",
    // Module resolution strategy for Node.js environment
    "moduleResolution": "NodeNext",
    // define where to put generated JS
    "outDir": "../../dist-electron",
    // ignore errors from dependencies
    "skipLibCheck": true,
    // Allow importing JSON files
    "resolveJsonModule": true,
    // Ensure ES module interoperability
    "esModuleInterop": true,
    // Allow default imports from modules with no default export
    "allowSyntheticDefaultImports": true
    // No JSX needed for main process code
    // "jsx": "react-jsx"
  },
  // Include files within the current directory (src/electron) AND the shared type definitions
  "include": [
    "./**/*", // Include all files in src/electron
    "../ui/vite-env.d.ts" // <--- Add this line back
  ],
  // Exclude node_modules and build outputs
  "exclude": ["../../node_modules", "../../dist-electron", "../../dist-react"]
}

